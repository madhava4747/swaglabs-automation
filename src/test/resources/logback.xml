<configuration>

    <!-- Log file location -->
    <property name="LOG_PATH" value="target/logs"/>
    <property name="LOG_FILE" value="${LOG_PATH}/execution.log"/>

    <!-- File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE}</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/execution-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>10</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console Appender (CLEAN) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ðŸ”• Silence Selenium -->
    <logger name="org.openqa.selenium" level="ERROR"/>

    <!-- ðŸ”• Silence TestNG -->
    <logger name="org.testng" level="ERROR"/>

    <!-- ðŸ”• Silence Maven internals -->
    <logger name="org.apache.maven" level="ERROR"/>

    <!-- Root Logger (ONLY YOUR LOGS) -->
    <root level="INFO">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
